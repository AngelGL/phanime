$cardWidth = 250px;
$cardHeight = 306px;
$bannerHeight = 150px;
.user-card {
  position: relative;
  width: $cardWidth;
  height: $cardHeight;
  overflow: hidden;

  .banner {
    position: relative;
    z-index: 0;
    width: 100%;
    height: $bannerHeight;
    background-size: cover;
    background-position: center center;
  }

  .content {
    margin: 0;
    padding: 15px;
    padding-top: 50px;
  }

  .avatar {
    position: absolute;
    z-index: 1;
    top: $bannerHeight - 60px;
    left: 50%;
    margin-left: -50px;
  }

  &.block {
    border-radius: 4px;
    overflow: hidden;
    padding: 0;
    position: relative;
    background-clip: padding-box;
    border: 1px solid rgba(0,0,0,.08);
  }
}
