$animeCardWidthAndMargin = 190px + 20px;
$twoCards = $animeCardWidthAndMargin*2;
$threeCards = $animeCardWidthAndMargin*3;
$fourCards = $animeCardWidthAndMargin*4;
$fiveCards = $animeCardWidthAndMargin*5;
$sixCards = $animeCardWidthAndMargin*6;


.anime-card-container {
  column(1/6, cycle: 6);
  +below($sixCards) {
    column(1/5, uncycle: 6, cycle: 5);
  }
  +below($fiveCards) {
    column(1/4, uncycle: 5, cycle: 4);
  }
  +below($fourCards) {
    column(1/3, uncycle: 4, cycle: 3);
  }
  +below($threeCards) {
    column(1/2, uncycle: 3, cycle: 2);
  }
  +below($twoCards) {
    column(1/1, uncycle: 2, cycle: 1);
  }
}

.anime-card {
  position: relative;
  width: 190px;
  height: 285px;
  background-size: cover;
  background-position: center;
  margin: 10px auto;
  border: 5px solid #FFF;
  box-shadow: 0 0 3px rgba(0,0,0,0.5);
  padding: 5px;
  color: $medGrey;
  text-align: center;
  transition: all 0.3s ease-in-out;
}
