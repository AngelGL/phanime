global-reset();

*,
*:before,
*:after {
  box-sizing: border-box;
}

html {
  position: relative;
  min-height: 100%;
  overflow-y: scroll;
}

body {
  padding: 0;
  margin: 0;
  font: $baseFontSize $baseFontFamily;
  background-color: $bodyBackgroundColor;
  font-smoothing: antialiased;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: $bodyFontColor;
}

a {
  color: $linkColor;
  cursor: pointer;
  text-decoration: none;
  word-wrap: break-word;
  transition: color 0.15s linear;

  &:hover {
    color: lighten($linkColor, 35%);
  }
}

h1, h2, h3, h4, h5, h6 {
  text-rendering: optimizelegibility;
}

.container {
  width: 1360px;
  padding-right: 15px;
  padding-left: 15px;
  margin-right: auto;
  margin-left: auto;
  +below(1360px) {
    width: 100%;
  }
}

.container-fluid {
  width: 100%;
  padding-right: 15px;
  padding-left: 15px;
}

.clearfix,
.container,
.container-fluid {
  clearfix();
}


#velocity-status-widget {
  z-index: 0 !important;
}
