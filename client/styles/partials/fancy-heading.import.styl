.fancy-heading {
	position: relative;
	background-image: url('http://www.wallpaperhd.co/Anime-HD-Wallpapers-2/images/Anime%20HD%20Wallpaper%2022.jpg');
	background-size: cover;
	background-position: center center;
	background-color: rgba(0, 0, 0, 0);
	box-shadow: inset 0 0 30px rgba(0, 0, 0, 0.66);
	height: 350px;
	width: 100%;
	color: #fff;

  .container {
  	height: 100%;
  	position: relative;
  	z-index: 2;
  	text-shadow: 0 0 3px rgba(0,0,0,.8);
  }

  a {
    color: #fff;
    text-decoration: none;

    &:hover {
      color: #fff;
      text-shadow: 0 0 15px rgba(0, 0, 0, 0.8);
      text-shadow: none;
    }

  }

	.banner-gradient {
		background-color: rgba(0,0,0,0.5);
	}

}
