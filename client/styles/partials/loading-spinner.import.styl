.loading-spinner{
  position: relative;
  margin: 10px auto;
  width: 50px;
  height: 30px;
}
.loading-spinner:before{
  width:20px;
  height:20px;
  border-radius:20px;
  background:blue;
  content:'';
  position:absolute;
  background: $lightGreen;
  -webkit-animation: preloader_3_before 1.5s infinite ease-in-out;
  -moz-animation: preloader_3_before 1.5s infinite ease-in-out;
  -ms-animation: preloader_3_before 1.5s infinite ease-in-out;
  animation: preloader_3_before 1.5s infinite ease-in-out;
}

.loading-spinner:after{
  width:20px;
  height:20px;
  border-radius:20px;
  background:blue;
  content:'';
  position:absolute;
  background: $medGrey;
  left:22px;
  -webkit-animation: preloader_3_after 1.5s infinite ease-in-out;
  -moz-animation: preloader_3_after 1.5s infinite ease-in-out;
  -ms-animation: preloader_3_after 1.5s infinite ease-in-out;
  animation: preloader_3_after 1.5s infinite ease-in-out;
}

@-webkit-keyframes preloader_3_before {
  0% {-webkit-transform: translateX(0px) rotate(0deg)}
  50% {-webkit-transform: translateX(50px) scale(1.2) rotate(260deg); background:$medGrey;border-radius:3px;}
  100% {-webkit-transform: translateX(0px) rotate(0deg)}
}
@-webkit-keyframes preloader_3_after {
  0% {-webkit-transform: translateX(0px)}
  50% {-webkit-transform: translateX(-50px) scale(1.2) rotate(-260deg);background:$lightGreen;border-radius:3px;}
  100% {-webkit-transform: translateX(0px)}
}

@-moz-keyframes preloader_3_before {
  0% {-moz-transform: translateX(0px) rotate(0deg)}
  50% {-moz-transform: translateX(50px) scale(1.2) rotate(260deg); background:$medGrey;border-radius:3px;}
  100% {-moz-transform: translateX(0px) rotate(0deg)}
}
@-moz-keyframes preloader_3_after {
  0% {-moz-transform: translateX(0px)}
  50% {-moz-transform: translateX(-50px) scale(1.2) rotate(-260deg);background:$lightGreen;border-radius:3px;}
  100% {-moz-transform: translateX(0px)}
}


@-ms-keyframes preloader_3_before {
  0% {
    -ms-transform: translateX(0px) rotate(0deg)
  }
  50% {
    -ms-transform: translateX(50px) scale(1.2) rotate(260deg);
    background:$medGrey;
    border-radius:3px;
  }
  100% {
    -ms-transform: translateX(0px) rotate(0deg)
  }
}
@-ms-keyframes preloader_3_after {
  0% {
    -ms-transform: translateX(0px)
  }
  50% {
    -ms-transform: translateX(-50px) scale(1.2) rotate(-260deg);
    background:$lightGreen;
    border-radius:3px;
  }
  100% {
    -ms-transform: translateX(0px)
  }
}

@keyframes preloader_3_before {
  0% {
    transform: translateX(0px) rotate(0deg)
  }
  50% {
    transform: translateX(50px) scale(1.2) rotate(260deg);
    background:$medGrey;
    border-radius:3px;
  }
  100% {
    transform: translateX(0px) rotate(0deg)
  }
}
@keyframes preloader_3_after {
  0% {transform: translateX(0px)}
  50% {
    transform: translateX(-50px) scale(1.2) rotate(-260deg);
    background:$lightGreen;
    border-radius:3px;
  }
  100% {transform: translateX(0px)}
}



