.library-entry-row-edit {
	max-width: 500px !important;

	.entry-episodes-seen {
		display: inline;
		width: 45px !important;
		padding: 5px 0 0 5px;
		border: 0;
		border-bottom: 1px solid $lightGrey;
	}

	.entry-total-episodes {
		display: inline;
		font-size: 16px;

		span {
			font-size: 18px;
		}

	}

	.icon-group, .libraryEntryRowEdit .icon-group {
		margin: 10px auto;
		color: #888;
	}

	.icon-group i, .libraryEntryRowEdit .icon-group i {
		font-size: 25px;
		padding: 5px 10px;
		cursor: pointer;
	}
}