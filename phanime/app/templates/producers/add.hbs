<div class="row">
	<div class="col-sm-12">
		<div class="box box-teal">
			<div class="box-heading">Add Producer</div>
			<div class="box-body">
				<form role="form">
					<div class="row">
						<div class="col-sm-6">
							<div class="form-group">
								<label>Name</label>
								{{input type="text" value=name placeholder="Producer's Name" class="form-control"}}
							</div>

						</div>

						<div class="col-sm-6">
							<div class="form-group">
								<label>Producer Image</label>
								{{file-upload url="/api/v1/upload/producers"  action="filesUploaded"}}
							</div>

							<div class="form-group">
								<label>Image Preview</label>
								{{#if cover_photo}}
									<img {{bind-attr src=producer_logo_url}} class="img">
								{{else}}
									Uploading...
								{{/if}}
							</div>

						</div>
					</div>

					<div class="row">
						<div class="col-sm-12">
							<div class="form-group">
								<label>Description</label>
								{{textarea value=description class="form-control" rows="10" placeholder="Description of Producer"}}
							</div>
						</div>
					</div>


					<div class="row">
						<div class="col-sm-12">
							<div class="form-group">
								<label>Related Anime</label>
								<div class="input-group">
									{{input type="text" value=search_text_anime class="form-control" placeholder="Search Anime"}}
									<span class="input-group-btn">
										<button class="btn btn-default" type="button" {{action 'trigger_search_anime'}}>Search</button>
									</span>
								</div>
							</div>
							<div style="max-height: 200px; overflow-y: auto">
								{{#each anime_results}}
									<div><a {{action 'select_anime' this }}>{{title}}</a></div>
								{{/each}}
							</div>

							<div class="form-group">
								<label>Selected Anime</label>
								{{#each selectedAnime}}
									<div>{{title}}</div>
								{{/each}}
							</div>						
						</div>
					</div>


					<div class="row">
						<div class="col-sm-12">
							<button class="btn btn-primary btn-beside" {{action 'add_producer'}}>Add Producer</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
