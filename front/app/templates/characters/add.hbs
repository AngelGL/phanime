<div class="row">
	<div class="col-sm-12">
		<div class="box box-teal">
			<div class="box-heading">Add Character</div>
			<div class="box-body">
				<form role="form">
					<div class="row">
						<div class="col-sm-6">
							<div class="form-group">
								<label>First Name</label>
								{{input type="text" value=first_name placeholder="First Name" class="form-control"}}
							</div>
							<div class="form-group">
								<label>Japanese Name</label>
								{{input type="text" value=japanese_name placeholder="Japanese Name" class="form-control"}}
							</div>

						</div>

						<div class="col-sm-6">
							<div class="form-group">
								<label>Last Name</label>
								{{input type="text" value=last_name placeholder="Last Name" class="form-control"}}
							</div>
							<div class="form-group">
								<label>Alternate Name</label>
								{{input type="text" value=alternate_name placeholder="Alternate Name" class="form-control"}}
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-sm-12">
							<div class="form-group">
								<label>Biography</label>
								{{textarea value=description class="form-control" rows="10" placeholder="Biography of character"}}
							</div>
						</div>
					</div>


					<div class="row">
						<div class="col-sm-6">
							<div class="form-group">
								<label>Related Anime</label>
								<div class="input-group">
									{{input type="text" value=search_text_anime class="form-control" placeholder="Search Anime"}}
									<span class="input-group-btn">
										<button class="btn btn-default" type="button" {{action 'trigger_search_anime'}}>Search</button>
									</span>
								</div>
							</div>					
						</div>

						<div class="col-sm-6">
							<div class="form-group">
								<label>Gender</label>
								{{view Ember.Select content=genders value=gender class="form-control"}}
							</div>
						</div>
					</div>


					<div class="row">
						<div class="col-sm-12">
							<div style="max-height: 200px; overflow-y: auto">
								{{#each anime_results}}
									<div><a {{action 'select_anime' this }}>{{title}}</a></div>
								{{/each}}
							</div>

							<div class="form-group">
								<label>Selected Anime</label>
								{{#each selectedAnime}}
									<div>{{title}}</div>
								{{/each}}
							</div>
					</div>

					<div class="row">
						<div class="col-sm-12">
							<button class="btn btn-primary btn-beside" {{action 'add_character'}}>Add Character</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

